.year-slider {
  height: 20px;
  margin-top: 10px;
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: 8px;
  z-index: 400;
  .rc-slider-handle {
    border-color: #3085C7;
    width: 14px;
    height: 14px;
    cursor: pointer;
    border-radius: 50%;
  }
  .rc-slider-step {
    background-color: #3085C7;
    cursor: pointer;
    .rc-slider-dot {
      border: 2px solid #3085C7;
      //#5A98C7
    }
    .rc-slider-dot-active {
      border: 2px solid #3085C7;
      background-color: #3085C7;
      box-shadow: 0px 0px 2px 1px rgba(255, 255, 255, 0.2);
    }
  }
}

.rc-slider-mark {
  position: absolute;
  top: 14px;
  left: 0;
  width: 100%;
  font-size: 10pt;
  color: #3085C7;
  .rc-slider-mark-text {
    font-family: 'PT Sans', sans-serif;
    font-weight: 700;
     font-size: 10pt;
    position: absolute;
    display: inline-block;
    vertical-align: middle;
    text-align: center;
    cursor: pointer;
    color: rgba(30, 84, 125, .7);
  }
  .rc-slider-mark-text-active {
    color: #1E547D;
  }
}