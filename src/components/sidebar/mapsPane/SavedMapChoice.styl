.savedMapChoice-clicked{
  transition-duration: 0.2s!important;
  background-color: #0A83C9!important;
  color: white!important;
  .savedMapChoice-control-icon{
    transition-duration: 0.2s!important;
    color: white!important;
  }
}
.savedMapChoice{
  padding-left: 5px;
  &:hover{
    .savedMapChoice-control-icon{
      opacity: 1!important
    }
    // background-color: white!important;
  }
  background-color: white;
}
.savedMapChoice-title{
  margin-right: 20px;
}
.savedMapChoice-controls{
  position: absolute;
  line-height: 5px;
  right: 2px;
  top: 0px;
  height: calc(100% - 10px);
  margin-top: 5px;
  margin-bottom: 5px;
  width: 10%;
  display: flex!important;
  flex-direction: column;
  flex-wrap: nowrap;
  align-items: stretch;
  justify-content: space-between;
  .savedMapChoice-control-delete{
    &:hover{
      color: red
    };
  }
  .savedMapChoice-control-download{
    &:hover{
      color: orange
    };
  }
  .savedMapChoice-control{
    width: 100%;
    border-radius: 3px;
    .savedMapChoice-control-icon{
      user-select: none;
    }
    &:hover{
      text-shadow: 0px 0px 1px rgba(150,150,150, .2);
    }
  }
}