.sidebar{
  position: absolute;
  top: 0px;
  left:0px;
  height: 100vh;
  width: 436px;
  background-color: white;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.35);
  pointer-events: auto;
  .sidebarPane{
    position: absolute;
    top: 0px;
    left: 36px;
    width: calc(100% - 36px);
    height: 100vh;
    // padding: 8px;
  }
}

