.sidebar{
  position: absolute;
  top: 0px;
  left:0px;
  height: 100vh;
  width: 436px;
  background-color: rgb(250, 250, 250);
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
  pointer-events: auto;
  .sidebarPane{
    position: absolute;
    top: 0px;
    left: 36px;
    width: calc(100% - 36px);
    height: 100vh;
    // padding: 8px;
  }
}

