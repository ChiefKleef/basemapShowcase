.mapStoragePane{
  position: fixed;
  z-index: 10000;
  height: 100vh;
  width: 100vw;
  left: 0px;
  top: 0px;
  background-color: rgba(255,255,255,.7);
  transition: background-color 0.25s linear;
  .mapStoragePane-optionsContainer{
    position: fixed;
    height: 100px;
    width: 250px;
    left: calc(50% - 100px);
    top: calc(50% - 50px);
    transition: top 0.25s linear;
    background-color: white;
    border-radius: 4px;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.35);
    .optionsContainer-container{
      position: relative;
      width: 100%;
      left: 0px;
      display: flex!important;
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: center;
      align-items: center;
    }
    .optionsContainer-titleContainer{
      top: 0px;
      height: 45%;
      font-weight: bold;
      color: rgb(100,100,100);
      font-size: 12.5pt;
    }
    .optionsContainer-buttonsContainer{
      bottom: 0px;
      height: 55%;
      .buttonsContainer-button{
        color: white;
        text-align: center;
        line-height: 25px;
        height: 25px;
        width: 90px;
        cursor: pointer;
        user-select: none;
        transition-duration: 0.3s;
        border-radius: 4px;
        margin-right: 5px;
        box-shadow: 2px 2px 3px rgba(100, 100, 100, 0.22);
        opacity: .9;
        &:hover{
          box-shadow: 2.7px 2.7px 8px rgba(50, 50, 50, 0.22);  
          opacity: 1;
        }
      }
      .buttonsContainer-button-no{
        background-color: tomato;
      }
      .buttonsContainer-button-yes{
        background-color: #81C784;
      }
    }
  }
}