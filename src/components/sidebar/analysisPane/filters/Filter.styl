.filter {
  height: 163px;
  position: relative;
  width: calc(95% + 4px);
  padding-top: 5px;
  padding-right: 4px;
  margin-top: 5px;
  background-color: white;
  box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.3);
  border-top: .5px solid rgb(200, 200, 200);
  border-left: .5px solid rgb(200, 200, 200);
  transition: right 0.25s ease, box-shadow 0.08s linear;
  right: 100%;
  &:hover {
    box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
    background-color: white;
  }
  .filterSection {
    width: 100%;
    height: 33px;
    margin-left: 5px
    // border: 1px solid rgba(255,0,0,.1);
    padding: 2px;
    .filterSection-title {
      display: block;
      position: relative;
      top: 50%;
      float: left;
      // color: rgb(20, 20, 20);
      color: #11639E;
      font-weight: 550;
      margin-top: -10px;
      margin-left: 2.5px;
      margin-right: 2.5px;
      user-select: none;
      cursor: default;
      
    }
  }
  .titleAndControls {
    float: right;
    width: 70px;
    height: 35px;
    margin-top: 5px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: nowrap
    position: relative;
    flex-direction: row;
    justify-content: space-around;
    .activeSlider {
      position: relative;
    }
    .removeFilterButton {
      position: relative;
      text-align: center;
      height: 100%;
      line-height: 100%;
      width: 20px;
      .fa-trash {
        font-size: 13.5pt;
        color: rgb(80, 80, 80);
        transition-duration: .1s;
        line-height: 170%;
        position: relative;
        cursor: pointer;
      }
      &:hover {
        .fa-trash {
          color: tomato;
        }
      }
    }
  }
  .fieldSelector {
    margin-top: 5px;
    height: 42px;
    width: calc(100% - 80px);
    float: left;
    .select {
      float: right;
      display: block;
      font-size: 11pt;
    }
    .select-field {
      float: right;
      width: calc(100% - 55px);
      margin-left: 7px;
    }
  }
  .yearSelector {
    height: 42px;
    width: 100%;
    float: left;
    .select {
      display: block;
      float: right;
      font-size: 11pt;
    }
    .select-year {
      float: right;
      margin-right: 15px;
      width: calc(100% - 70px);
      margin-left: 7px;
    }
  }
  .rangeSelector {
    // length of Range title is 47.45
    height: 63px;
    position: relative;
    float: right;
    .sliderContainer {
      height: 40px;
      position: relative;
      float: left;
      top: 50%;
      margin-top: -22px;
      margin-left: 15px;
      // margin-right: 10px;
      width: calc(100% - 47.45px - 10px - 25px);
      
      .slider {
        position: absolute;
        bottom: 0px;
        .rc-slider-handle {
          border: none;
          box-shadow: 0px 0px 1.5px rgba(0, 0, 0, 0.6);
        }
        .rc-slider-track-1 {
          background-color: #1B9AF7;
        }
        .rc-slider-mark-text {
          margin-left: -43px;
          color: rgba(17,99,158, .8);
          margin-top: -7px;
        }
        .rc-slider-dot {
          border-color: #C2C2C2;
        }
        .rc-slider-mark-text-active{
          margin-left: -43px;
          color: #11639E;
          margin-top: -7px;
        }
        .rc-slider-dot-active{
          border-color: #1B9AF7;
        }
      }
      .rangeInputContainer {
        margin-bottom: 3px;
        width: 100%;
        .rangeInputSubCont-min {
          float: left;
        }
        .rangeInputSubCont-max {
          float: right;
        }
        .rangeInputSubCont {
          .rangeInputLabel {
            font-size: 9pt;
            color: #11639E;
            user-select: none;
            cursor: default;
          }
          .rangeInputLabel-min{
            margin-left: 5px;
          }
          .rangeInputLabel-max{
            margin-right: 5px;
          }
          .rangeInput {
            position: relative;
            width: 75px;
            line-height: 20px;
            height: 20px;
            // line-height: 2;
            // height: 2em;
            font-size: 9.5pt;
            // padding needs to be reset for firefox
            padding: 0px;
            padding-left: 3px;
            padding-right: 3px;
            border-radius: 3px;
          }
          .rangeInput-min {}
          .rangeInput-max {}
        }
      }
    }
  }
  .validationBar {
    position: absolute;
    right: 0px;
    top: 0px;
    width: 4px;
    height: 100%;
    opacity: .7;
    transition-duration: .15s;
  }
  .validationBar-active {
    background-color: #81C784;
  }
  .validationBar-inactive {
    background-color: tomato!important;
  }
  .validationBar-invalid {
    background-color: #FFB74D;
  }
}