.filtersContainer {
  margin-top: 5px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  .noFiltersMessage-container {
    height: 143px;
    width: 95%;
    text-align: center;
    line-height: 143px;
    user-select: none;
    cursor: default;
    .noFiltersMessage {
      font-size: 20pt;
      color: rgb(237, 237, 237);
    }
  }
  .filtersControls{
    position: relative;
    margin-top: 20px;
    width: 100%;
    right: 100%;
    transition: right 0.25s ease
    height: max-content;
    display: flex!important;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
    .filtersControls-resetButton{
      text-align: center;
      line-height: 25px;
      height: 25px;
      width: 90px;
      cursor: pointer;
      transition-duration: 0.3s;
      border-radius: 4px;
      margin-right: 5px;
      .filtersControls-resetButton-text{
        user-select: none;
        .filtersControls-resetButton-icon{
          margin-right 5px;
          font-size: 9pt;
          margin-bottom: 2px;
        } 
      }
    }
    .filtersControls-resetButton-clicked{
      background-color: #81C784;
      color: white;
      box-shadow: 1px 1px .5px rgba(100, 100, 100, 0.4);
    }
    .filtersControls-resetButton-notClicked{
      background-color: #81C784;
      color: white;
      box-shadow: 2px 2px 3px rgba(100, 100, 100, 0.22);
      &:hover{
        box-shadow: 2.7px 2.7px 8px rgba(50, 50, 50, 0.22);
      }
    }
    .filtersControls-deleteButton{
      text-align: center;
      line-height: 25px;
      height: 25px;
      width: 93px;
      cursor: pointer;
      transition-duration: 0.3s;
      border-radius: 4px;
      margin-right: 5px;
      .filtersControls-deleteButton-text{
        user-select: none;
        .filtersControls-deleteButton-icon{
          margin-right 5px;
          font-size: 10pt;
        } 
      }
    }
    .filtersControls-deleteButton-clicked{
      background-color: tomato;
      color: white;
      box-shadow: 1px 1px .5px rgba(100, 100, 100, 0.4);
    }
    .filtersControls-deleteButton-notClicked{
      background-color: tomato;
      color: white;
      box-shadow: 2px 2px 3px rgba(100, 100, 100, 0.22);
      &:hover{
        box-shadow: 2.7px 2.7px 8px rgba(50, 50, 50, 0.22);
      }
    }
  }
}

.addFilterMessage {
  opacity: .7;
  color: #0A83C9;
  font-style: italic;
  font-size: 11pt;
  float: right;
  line-height: 50px;
  margin-right: 10px;
}

.header {
  .addFilterButton {
    position: relative;
    top: 25px;
    height: 30px;
    width: 30px;
    border-radius: 100%;
    float: right;
    background-color: #0A83C9;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.4);
    margin: 3px;
    margin-top: -15px;
    cursor: pointer;
    transition-duration: .2s;
    transition-property: box-shadow;
    display: flex;
    justify-content: center;
    align-items: center;
    .faPlusRotator {
      height: 100%;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      -webkit-backface-visibility: hidden;
      transition-duration: .15s;
      transition-timing-function: linear;
      .fa-plus {
        font-size: 11pt;
        color: white;
        margin-top: 2px;
      }
    }
    &:hover {
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
    }
  }
  .addFilterButton-inactive {
    background-color: rgba(10, 131, 201, .5);
    box-shadow: 0px 0px 6px rgba(0, 0, 0, 0);
    cursor: default;
    &:hover {
      box-shadow: 0px 0px 6px rgba(0, 0, 0, 0);
    }
  }
}