.classesVisualizer {
  height: 140px;
  position: relative;
  width: calc(95% + 4px);
  padding-right: 4px;
  margin-top: 5px;
  padding-top: 8px;
  background-color: rgb(250, 250, 250);
  box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.3);
  border-top: .5px solid rgb(200, 200, 200);
  border-left: .5px solid rgb(200, 200, 200);
  transition: right 0.25s ease, box-shadow 0.08s linear;
  right: 100%
  &:hover {
    box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
    background-color: rgb(252, 252, 252);
  }
  .visSection {
    width: 100%;
    height: 33px;
    // border: 1px solid rgba(255,0,0,.1);
    padding: 2px;
    .visSection-title {
      display: block;
      position: relative;
      top: 50%;
      float: left;
      // color: rgb(20, 20, 20);
      color: #11639E;
      font-weight: 550;
      margin-top: -10px;
      margin-left: 2.5px;
      margin-right: 2.5px;
      user-select: none;
      cursor: default;
    }
  }
  .titleAndControls-visualizer {
    width: 45px;
    margin-bottom: 5px;
    float: right;
    justify-content: center;
    align-items: center;
    flex-wrap: nowrap
    position: relative;
    flex-direction: row;
    justify-content: space-around;
    .activeSlider {
      margin-top: 10px;
      margin-left: 10px;
      position: relative;
    }
  }
  .fieldSelector {
    height: 42px;
    width: calc(100% - 45px);
    .select {
      display: block;
      float: left;
      font-size: 11pt;
    }
    .select-field {
      margin-right: 5px;
      float: right;
      width: calc(100% - 37px - 18px);
      margin-left: 7px;
    }
  }
  .yearSelector {
    height: 42px;
    .select {
      display: block;
      float: left;
      font-size: 11pt;
    }
    .select-year {
      margin-right: 5px;
      float: right;
      width: calc(100% - 37px - 18px);
      margin-left: 7px;
    }
  }
  .classSelector{
    height: 42px;
    .select-classNum{
      float: left;
      width: 65px;
      margin-left: 7px;
    }
    .visSection-title-palette{
      float: right;
    }
    .select-palette{
      float: right;
      width: 150px;
      margin-right: 5px;
      margin-left: 7px;
    }
  }
  .rangeSelector {
    // length of Range title is 47.45
    height: 63px;
    .sliderContainer {
      height: 40px;
      position: relative;
      float: right;
      top: 50%;
      margin-top: -20px;
      margin-left: 10px;
      margin-right: 10px;
      width: calc(100% - 47.45px - 10px - 20px);
      .slider {
        position: absolute;
        bottom: 0px;
        .rc-slider-handle {
          border: none;
          box-shadow: 0px 0px 1.5px rgba(0, 0, 0, 0.6);
        }
        .rc-slider-track-1 {
          background-color: #1B9AF7
        }
      }
      .rangeInputContainer {
        margin-bottom: 3px;
        width: 100%;
        .rangeInputSubCont-min {
          float: left;
        }
        .rangeInputSubCont-max {
          float: right;
        }
        .rangeInputSubCont {
          .rangeInputLabel {
            font-size: 9pt;
            color: #11639E;
            user-select: none;
            cursor: default;
          }
          .rangeInputLabel-min{
            margin-left: 5px;
          }
          .rangeInputLabel-max{
            margin-right: 5px;
          }
          .rangeInput {
            width: 75px;
            height: 20px;
            font-size: 9.5pt;
            padding-left: 3px;
            padding-right: 3px;
            border-radius: 3px;
          }
          .rangeInput-min {}
          .rangeInput-max {}
        }
      }
    }
  }
  .validationBar {
    position: absolute;
    right: 0px;
    top: 0px;
    width: 4px;
    height: 100%;
    opacity: .7;
  }
  .validationBar-true {
    background-color: #81C784;
  }
  .validationBar-false {
    background-color: tomato;
  }
}