.classesVisualizer {
  height: 185px;
  position: relative;
  width: calc(95% + 4px);
  padding-right: 4px;
  margin-top: 5px;
  padding-top: 8px;
  background-color: rgb(250, 250, 250);
  box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.3);
  border-top: .5px solid rgb(200, 200, 200);
  border-left: .5px solid rgb(200, 200, 200);
  transition: right 0.25s ease, box-shadow 0.08s linear;
  right: 100%
  &:hover {
    box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
    background-color: rgb(252, 252, 252);
  }
  .visSection {
    width: 100%;
    height: 33px;
    // border: 1px solid rgba(255,0,0,.1);
    padding: 2px;
    .visSection-title {
      display: block;
      position: relative;
      top: 50%;
      float: left;
      // color: rgb(20, 20, 20);
      color: #11639E;
      font-weight: 550;
      margin-top: -10px;
      margin-left: 2.5px;
      margin-right: 2.5px;
      user-select: none;
      cursor: default;
    }
  }
  .titleAndControls-visualizer {
    width: 45px;
    margin-bottom: 5px;
    float: right;
    justify-content: center;
    align-items: center;
    flex-wrap: nowrap
    position: relative;
    flex-direction: row;
    justify-content: space-around;
    .activeSlider {
      margin-top: 10px;
      position: relative;
    }
  }
  .fieldSelector {
    height: 42px;
    width: calc(100% - 45px);
    .select {
      display: block;
      float: left;
      font-size: 11pt;
    }
    .select-field {
      margin-right: 5px;
      float: right;
      width: calc(100% - 37px - 18px);
      margin-left: 7px;
    }
  }
  .yearSelector {
    height: 42px;
    .select {
      display: block;
      float: left;
      font-size: 11pt;
    }
    .select-year {
      margin-right: 5px;
      float: right;
      width: calc(100% - 37px - 18px);
      margin-left: 7px;
    }
  }
  .classSelector{
    height: 42px;
    .select-classNum{
      float: left;
      width: 65px;
      margin-left: 7px;
    }
    .visSection-title-palette{
      float: right;
    }
    .select-palette{
      float: right;
      width: 150px;
      margin-right: 5px;
      margin-left: 7px;
    }
  }
  .rangeSelector {
    // length of Range title is 47.45
    height: 40px;
    .sliderContainer {
      height: 30px;
      position: relative;
      float: right;
      top: 50%;
      margin-top: -20px;
      margin-left: 10px;
      margin-right: 10px;
      width: calc(100% - 47.45px - 15px - 20px);
      .rc-slider-tooltip{
        z-index: 1000;
        visibility: visible!important;
      }
      .slider {
        position: absolute;
        bottom: 0px;
        .rc-slider-handle {
          border: none;
          box-shadow: 0px 0px 1.5px rgba(0, 0, 0, 0.6);
        }
        .rc-slider-rail {
          background-color: #1B9AF7
        }
        .rc-slider-track {
          // background-color: #1B9AF7
        }
        .rc-slider-mark-text {
          margin-left: -43px;
          color: rgba(17,99,158, .8);
          margin-top: -7px;
        }
        .rc-slider-dot {
          border-color: rgb(150,150,150);
        }
        .rc-slider-mark-text-active{
          margin-left: -43px;
          color: #11639E;
          margin-top: -7px;
        }
        // .rc-slider-dot-active{
        //   border-color: #1B9AF7;
        // }
      }
    }
  }
  .validationBar {
    position: absolute;
    right: 0px;
    top: 0px;
    width: 4px;
    height: 100%;
    opacity: .7;
  }
  .validationBar-true {
    background-color: #81C784;
  }
  .validationBar-false {
    background-color: tomato;
  }
}