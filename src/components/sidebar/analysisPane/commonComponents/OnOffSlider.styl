.onOffSlider{
  height: 100%;
  width: 25px;
  .slidingContainer{
    width: 100%
    height: 10px;
    border-radius: 10px;
    top: 50%;
    position: relative;
    margin-top: -5px;
    cursor: pointer;
    transition-duration: .2s;
    .slidingBead{
      position: absolute;
      height: 10px;
      width: 10px;
      border-radius: 10px;
      background-color: white;
      box-shadow: 0px 0px 1.5px rgba(0, 0, 0, 0.35);
      transition-duration: .1s;
    }
  }
}
.onOffSlider-on{
  .slidingContainer{
    background-color: #81C784;
    .slidingBead{
      right: 0px;
    }
  }
}
.onOffSlider-off{
  .slidingContainer{
    background-color: tomato; 
    .slidingBead{
      right: calc(100% - 10px);
    }
  }
}