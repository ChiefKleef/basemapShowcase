.mBCredits{
  position: absolute;
  pointer-events: auto;
  bottom: 10px;
  right: 10px;

  .mBCredits-creditsDrawer{
    position: absolute;
    right: 15px;
    top: 0px;
    height: 30px;
    width: max-content;
    background-color: rgba(255,255,255,.7)
    border-top-left-radius: 15px;
    border-bottom-left-radius: 15px;
    padding-right: 15px;
    padding-left: 8px;
    z-index: 499!important;
    line-height: 25px;
    white-space: nowrap;
    .mBCredit{
      color: rgb(80,80,80);
      font-size: 9pt;
      margin-right: 5px;
      &:hover{
        text-decoration: underline;
      }
      .fa-copyright{
        margin-right: 2px;
      }
    }
    .mBCredits-improveMap{
      font-weight: bold;
    }
  }
  .mBCredits-button{
    position: relative;
    height: 30px;
    width: 30px;
    border-radius: 30px;
    background-color: white;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.35);
    text-align: center;
    line-height: 30px;
    z-index: 500!important;
    cursor: pointer;
    .mBCredits-button-icon{
      color: #333333;
    } 
  }
}
