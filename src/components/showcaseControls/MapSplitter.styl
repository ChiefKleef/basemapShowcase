.mapSplitter-container {
  position: absolute;
  z-index: 10;
  pointer-events: none;
  height: 100%;
  width: 100%;
  top: 0px;
  left: 0px;
  display: flex;
  flex-direction: column;
  vertical-align: center;
  align-items: center;
  .mapSplitter {
    height: 100%;
    display: flex;
    flex-direction: column;
    vertical-align: center;
    align-items: center;
    flex-wrap: none;
    .mapSplitter-button {
      margin: 10px;
    }
    .mapSplitter-dividerPreview {
      width: 1.5px;
      background-color: white; 
      box-shadow: 0px 0px 2px rgba(0, 0, 0, 0.8);
      transition: opacity .1s linear, box-shadow .1s linear, margin 0.1s linear;
      box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.8);      
      flex-grow: 1;
    }
    .mapSplitter-dividerPreview-hover {
      opacity: 1;
    }
    .mapSplitter-dividerPreview-unhover {
      opacity: 0;
    }
    .mapSplitter-dividerPreview-press {
      margin: 5px;
    }
    .mapSplitter-dividerPreview-unpress {
      margin: 20px;
    }
  }
}