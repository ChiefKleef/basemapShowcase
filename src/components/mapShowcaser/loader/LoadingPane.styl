.loadingPane-active {
  opacity: 1;
  pointer-events: auto;
}
.loadingPane-inactive {
  opacity: 0;
  pointer-events: none;
}
.loadingPane {
  position: absolute;
  bottom: 0px;
  user-select: none;
  height: 100%;
  h = @height;
  width: 100%;
  left: 0px;
  background-image: linear-gradient(135deg, #34abfa, #585CF4);
  z-index: 1000000;
  transition: bottom .3s ease-in, opacity 0.3s linear;
  overflow: hidden;
  .loadingPane-spinner {
    position: absolute;
    z-index: 1000;
    box-sizing: border-box;
    border-radius: 100%;
    border: 5px solid rgba(255, 255, 255, 0.2);
    border-top-color: #FFF;
    animation: spin .5s infinite linear;
    width: 80px;
    height: 80px;
    margin-top: -40px;
    margin-left: -40px;
    left: 50%;
    top: 50%;
  }
}

@-webkit-keyframes spin {
  0% {
    -webkit-transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
