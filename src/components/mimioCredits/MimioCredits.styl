.mimioCredits-container {
  position: absolute;
  top: 10px;
  z-index: 5;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  .mimioCredits-button {
    cursor: pointer;
    border: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.35);
    transition: color 0.1s linear, background-color 0.1s linear, box-shadow 0.1s linear;
    height: 30px;
    border-radius: 15px;
    pointer-events: auto;
    font-size: 10pt;
  }
  .mimioCredits-website {
    padding-left: 4px;
    padding-right: 4px;
    background-color: white;
    color: tomato;
    .mimioCredits-website-text {
      font-family: 'Noto Sans';
      font-weight: 700;
      letter-spacing: 2px;
      margin-left: 2px;
    }
    &:hover {
      background-color: rgb(235,235,235);
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.35);
    }
    &:active {
      background-color: rgb(215,215,215);
      box-shadow: 0px 0px 2.5px rgba(0, 0, 0, 0.5);
    }
  }
  .mimioCredits-github {
    width: 30px;
    margin-left: 10px;
    font-size: 14pt;
    background-color: tomato;
    color: white;
    &:hover {
      background-color:#e75a40;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.35);
    }
    &:active {
      background-color: #d0513a;
      box-shadow: 0px 0px 2.5px rgba(0, 0, 0, 0.5);
    }
  }
}
.mimioCredits-container-mapSplit-true {
  left: 50px;
}
.mimioCredits-container-mapSplit-false {
  left: 10px;
}